<%= javascript_include_tag 'lofslidernews.mt11' %>
<%= javascript_include_tag 'mootools.svn' %>
<div class="col-lg-12  col-md-12 col-sm-12 col-xs-12 ">

      <!------------------------------------- THE CONTENT ------------------------------------------------->
      <div id="lofslidecontent45" class="lof-slidecontent">

        <div class="preload"><div></div></div>
        <!-- MAIN CONTENT -->

        <div class="lof-main-wapper">
          <%= @a_la_une.each do |slide| %>
          <div class="lof-main-item">
            <%= image_tag slide.image_a_la_une.url(:medium) %>
            <div class="lof-main-item-desc">
              <h3><%= link_to slide.titre, slide %></h3>

              <p><%= slide.surtitre.truncate(100) %>... <i class="fa fa-book" style="color: #ffffff"></i></p>
            </div>
          </div>
          <% end %>
        </div>

        <!-- END MAIN CONTENT -->
        <!-- NAVIGATOR -->

        <div class="lof-navigator-outer">
          <ul class="lof-navigator">
            <%= @a_la_une.each do |slide| %>
            <li>
              <div>
                <%= image_tag slide.image_a_la_une.url(:medium, class: 'img') %>
                <p><%= slide.titre%></p>
              </div>
            </li>
            <% end %>
          </ul>
        </div>
      </div>

      <script type="text/javascript">
          var _lofmain =  $('lofslidecontent45');
          var _lofscmain = _lofmain.getElement('.lof-main-wapper');
          var _lofnavigator = _lofmain.getElement('.lof-navigator-outer .lof-navigator');
          var object = new LofFlashContent( _lofscmain,
                  _lofnavigator,
                  _lofmain.getElement('.lof-navigator-outer'),
                  { fxObject:{ transition:Fx.Transitions.Quad.easeInOut,  duration:800},
                      interval:3000,
                      direction:'opacity' } );
          object.start( true, _lofmain.getElement('.preload') );
      </script>




</div>
