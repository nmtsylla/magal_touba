<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="page-head-line">Acceuil</h4>
        </div>
    </div>

    <div class="row">
        <%= render 'home/slider' %>
    </div>


    <div class="row">
        <div class="col-md-8 col-sm-6 col-xs-12 " width="660" height="515" >
            <div class=" " id="#">
              <h4 style="text-align: center"><%= @dossier.titre %></h4>
              <p style="text-align: center"><%= @dossier.contenu.html_safe %></p>
            </div>
        </div>

        <%= render 'fil_dactu' %>
    </div>


        <div class="col-md-8 col-sm-12 col-xs-12">
          <div class="videoWrapper">
            <iframe width="660" height="515" src="https://www.youtube.com/embed/Xmc_VAoGHBM?list=PLUw-0N-Li1kWn9bP31mN_x8YeTOE6wyZn" frameborder="0" allowfullscreen></iframe>
          </div>
        </div>
        <div >
          <%= render 'left_part' %>
        </div>


    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="dashboard-div-wrapper bk-clr-one actuprincip" id="#">
            <i class="fa fa-venus dashboard-div-icon" ></i>
            <div class="progress progress-striped active">
                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
                </div>
            </div>
            <h5>Témoignages</h5>
        </div>
    </div>
      <div class="col-md-4 col-sm-6 col-xs-12">
        <%= render 'sagesse' %>
      </div>
      <%= render 'mouride_de_la_semaine' %>



  <div class="row">
    <div class="col-md-8">
        <h2 style="text-align: center">Utile à savoir</h2>
        <div class="panel-body">
          <div class="panel-group" id="accordion">
            <% @a_savoir.each do |savoir|  %>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h4 class="panel-title">
                      <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= savoir.id %>" class="collapsed"><%= savoir.titre %></a>
                    </h4>
                  </div>
                  <div id="collapse<%= savoir.id %>" class="panel-collapse collapse" style="height: 0px;">
                    <div class="panel-body">
                      <%= savoir.surtitre %>
                      <%= savoir.contenu.html_safe %>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    <%= render 'pub' %>
  </div>


</div>

