<div class="row">
  <div class="col-md-12">
    <div id="timeline">
      <ul id="dates">
        <% @events.each do|event| %>
            <li><a href='#<%= event.id%>'><%= event.date.strftime('%m/%d/%Y') %></a></li>
        <% end %>
      </ul>
      <ul id="issues">
        <% @events.each do|event| %>
            <li id="<%= event.id%>">
              <img src="images/1.png" width="256" height="256" />
              <h3><%= event.date.strftime('%m/%d/%Y') %></h3><h1><%= event.titre.html_safe %></h1>
              <p><%= event.descriptif.html_safe %></p>
            </li>
        <% end %>
      </ul>
      <div id="grad_left"></div>
      <div id="grad_right"></div>
      <a href="#" id="next">+</a>
      <a href="#" id="prev">-</a>
    </div>
  </div>
</div>