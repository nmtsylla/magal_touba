<div class="item">
  <div class="bs-component">
    <div>
      <% if article.image_a_la_une_url.nil? %>
          <img src="http://placehold.it/300x150" alt="" class="img-responsive"/>
      <% else %>
          <%= image_tag article.image_a_la_une_url(:article), class:'img-responsive' %>
      <% end %>
    </div>
    <h3><%= link_to article.titre, article, class: 'line-clamp' %></h3>
    <span class="time_display"><%= article.created_at %></span>
  </div>
  <% if current_user %>
      <%= link_to 'Edit', edit_article_path(article) %>
      <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>